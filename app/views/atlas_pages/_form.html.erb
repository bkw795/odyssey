<%= form_for @atlas_page do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>
  <%= f.submit action_name.capitalize + " Atlas Page", :class => "btn" %>
<% end %>
