<h3>Create New Loation</h3>

<%= form_for @location do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, :class => "form-control" %>
  </div>

  <%= f.submit "Submit", :class => "btn btn-submit" %>

<% end %>
