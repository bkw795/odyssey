<h1><%= @location.name %></h1>
<div>Address = <%= @location.address %></div>
<div>Latitude = <%= @location.latitude %></div>
<div>Longitude = <%= @location.longitude %></div>

<div style="margin-top:30px;">
  <h3>Private Notes</h3>
  <% @location.private_notes.each do |pn| %>
    <p>- <%= pn.text %></p>
  <% end %>

  <%= link_to "Add a private note", new_location_private_note_path(:location_id => @location.id)%>
</div>



